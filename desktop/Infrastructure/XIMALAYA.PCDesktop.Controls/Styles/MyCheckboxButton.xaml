<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:MControls="clr-namespace:XIMALAYA.PCDesktop.Controls">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="pack://application:,,,/XIMALAYA.PCDesktop.Controls;component/Themes/MyCheckboxButton.xaml" />
	</ResourceDictionary.MergedDictionaries>
	
	<Style x:Key="MetroMyToggleButton" TargetType="MControls:MyCheckboxButton" BasedOn="{StaticResource {x:Type MControls:MyCheckboxButton}}">
		<Setter Property="BorderBrush" Value="{DynamicResource AccentColorBrush}" />
		<Setter Property="IconFill" Value="White" />
		<Setter Property="SuperScriptSize" Value="50"/>
	</Style>

</ResourceDictionary>